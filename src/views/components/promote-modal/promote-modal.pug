.modal.micromodal-slide.modal--form-primary.modal-phone__callback#modalPromotion(aria-hidden="true")
    .modal__overlay.modal__overlay--promote(tabindex="-1", data-micromodal-close)
        .modal__header.modal__header--promote
            .icon-close(data-micromodal-close, aria-label="Close this dialog window")
        .modal__container.modal__container--promote(role="dialog", aria-modal="true", aria-labelledby="modal-callback-form-title")
            .modal__content.modal__content--promote
                a(href="#")
                    img.promote__image-wrapper(src="/assets/images/popup-demo.jpg", alt="demopromotion")